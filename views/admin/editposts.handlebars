{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/posts/edit" method="POST">
        <input type="hidden" value="{{post._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input value="{{post.titulo}}" type="text" name="titulo" class="form-control" required>
            
            <label for="slug">Slug:</label>
            <input value="{{post.slug}}" type="text" name="slug" class="form-control" required>

            <label for="descricao">Descrição: </label>
            <input value="{{post.descricao}}" type="text" name="descricao" class="form-control" required>

            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo"  class="form-control">{{post.conteudo}}</textarea required>
            
            <label for="categoria">Categoria:</label>
            <select name="categoria" class="custom-select" required>
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria encontrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-2" type="submit">Editar</button>
        </form>
    </div>

</div>