<h2>Lista de Posts: </h2>
<hr>
<a href="/admin/posts/add"><button class="btn btn-success">Novo Post</button></a>

{{#each posts}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{titulo}}</h4>
            <p>Descrição: {{descricao}}</p>
            <small>Data: {{data}}</small><br>
            <small>Categoria: {{categoria.nome}}</small><br>
            <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success mt-3">Editar post</button></a>
            <a href="/admin/posts/delete/{{_id}}"><button class="btn btn-danger mt-3">Deletar post</button></a>
        </div>
    </div>
{{else}}
    <p>Nenhum Post encontrado</p>
{{/each}}